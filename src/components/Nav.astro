---
import { Icon } from 'astro-icon';
import Link from "./Link.astro";
import navData from "../data/navData";
---

<nav aria-label="Primary">
	<div class="navbar">
		<a href="/" class="logomark" aria-label="Go home">
			<Icon name="logomark" width="60" fill="white" />
		</a>
		<ul>
			{
				navData.map((item) => (
					<li>
						<Link 
							text={item.name} 
							href={item.path} 
							style="primary"
							isFilled={false}
							data-navLink
						/>
					</li>
				))
			}
		</ul>
	</div>
</nav>

<script>
	import "../js/nav.js"
</script>